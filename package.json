{
  "name": "openpublish",
  "version": "0.0.3",
  "description": "A publishing protocol for registering media as a digital asset on the Bitcoin blockchain.",
  "main": "src/index.js",
  "directories": {
    "test": "npm test"
  },
  "dependencies": {
    "async": "^1.2.1",
    "bitcoinjs-lib": "^1.5.7",
    "bitstore": "0.0.4",
    "blockcast": "^0.1.3",
    "create-torrent": "^3.10.3",
    "filereader": "^0.10.3",
    "magnet-uri": "^5.0.0",
    "parse-torrent": "^5.0.0",
    "xhr": "^2.0.1"
  },
  "devDependencies": {
    "browserify": "^10.1.3",
    "chain-node": "^3.0.0",
    "drag-drop": "^2.1.0",
    "file-api": "^0.10.4",
    "jasmine-node": "^1.14.5",
    "reactify": "^1.1.1",
    "request": "^2.55.0",
    "watchify": "^3.2.1"
  },
  "scripts": {
    "test": "jasmine-node test/ --forceexit --verbose --captureExceptions",
